<p id="notice"><%= notice %></p>

<h1>Fables</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Story</th>
      <th>Summary</th>
      <th>Views</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fables.each do |fable| %>
      <tr>
        <td><%= fable.user %></td>
        <td><%= fable.name %></td>
        <td><%= fable.story %></td>
        <td><%= fable.summary %></td>
        <td><%= fable.views %></td>
        <td><%= fable.likes %></td>
        <td><%= link_to 'Show', fable %></td>
        <td><%= link_to 'Edit', edit_fable_path(fable) %></td>
        <td><%= link_to 'Destroy', fable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fable', new_fable_path %>
